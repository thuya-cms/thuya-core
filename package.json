{
  "name": "@thuya/core",
  "version": "0.0.1",
  "description": "Thuya CMS - Core features",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Geri101/thuya-core.git"
  },
  "keywords": [
    "thuya",
    "core",
    "cms",
    "headless",
    "authorization",
    "authentication",
    "common"
  ],
  "author": "Gergely Sim√°ndi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Geri101/thuya-core/issues"
  },
  "homepage": "https://github.com/Geri101/thuya-core#readme",
  "dependencies": {
    "@thuya/framework": "^0.0.4",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.15",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sinon": "^15.0.4",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "exclude": [
      "dist/**/*",
      "test/**/*"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  },
  "scripts": {
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "test:coverage": "nyc npm run test",
    "prepare": "npm run build",
    "publish:dev": "npm publish --tag development",
    "build": "npx tsc",
    "build:dev": "npx tsc -p tsconfig-dev.json",
    "link": "npm link",
    "link:all": "npm link @thuya/framework"
  }
}
